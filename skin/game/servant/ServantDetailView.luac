    for i, v in ipairs(self.btnOrder) do
        local item = UITools.getChild(panal, v)
        if item:isVisible() then
            num = num + 1
        end
    end
    panal:setTouchEnabled(num > 4)
    local space = num == 4 and 10 or 0
    local x = space
    for i, v in ipairs(self.btnOrder) do

function __Class:getEpStr(v,level)
    local epid = v.epid
    local etype = v.type
    local base = v.base
    local str = self.servantVo.name
    local numStr = ""
    for i,v in ipairs(epid) do
        if i > 1 then
            str = str .. "、"
        end
        str = str..lang("wife.attr"..v)
    end
    str = str .. lang("wife.attr")
    if etype == 1 then
        numStr = ""..base * level
    elseif etype == 2 then
        numStr = (base/100) * level.."%"
    end
    return str.."#E"..numStr
end

